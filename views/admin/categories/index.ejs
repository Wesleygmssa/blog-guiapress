<%- include('../../components/header.ejs'); %>
    <%- include('../../components/navbar.ejs'); %>
        <div class="container">
            <hr>
            <h2>Categoria</h2>
            <a href="/admin/categories/new" class=" btn btn-success">Criar nova Categoria</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=>{ %>
                        <tr>
                            <th>
                                <%= category.id %>
                            </th>
                            <th>
                                <%= category.title %>
                            </th>
                            <th>
                                <%= category.slug %>
                            </th>
                            <th>
                                <a class=" btn btn-warning" href="/admin/categories/edit/<%=category.id %> ">
                                    Editar
                                </a>

                                <form action="/categories/delete" method="POST" style="display:inline;"
                                    onsubmit="confirmationDelete(event, this)">

                                    <input type="hidden" name="id" value="<%=category.id%> ">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </th>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('../../components/footer.ejs'); %>